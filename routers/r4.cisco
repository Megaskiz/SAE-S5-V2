! WAN, Router 4
enable
config terminal
ip route 192.168.2.0 255.255.255.128 GigabitEthernet0/2
ip route 192.168.2.128 255.255.255.128 GigabitEthernet0/2
hostname r4
! To r1
interface GigabitEthernet0/0
 ip address 10.0.70.2 255.255.255.252
 ipv6 enable
 ipv6 address fd00:70::2/64
 ipv6 ospf 1 area 0
 no shutdown
! To s9
interface GigabitEthernet0/1
 ip address 10.0.50.1 255.255.255.252
 ipv6 enable
 ipv6 address fd00:50::1/64
 ipv6 ospf 1 area 0
 no shutdown
exit
! To r5
interface GigabitEthernet0/2
 ip address 10.0.60.2 255.255.255.252
 ipv6 enable
 ipv6 address fd00:60::2/64
 ipv6 ospf 1 area 0
 no shutdown
exit
router ospf 1
 network 10.0.50.0 0.0.0.3 area 0
 network 10.0.60.0 0.0.0.3 area 0
 network 10.0.70.0 0.0.0.3 area 0
exit
ipv6 unicast-routing
ipv6 router ospf 1
 router-id 1.1.1.4
exit
exit
exit
!
